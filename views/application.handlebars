            <td>Applicant: </td>
            <td>{{application.applicant.firstname}} {{application.applicant.lastname}}</td>
        </tr>
        <tr>
            <td>Company Name</td>
            <td></td>
        </tr>
        <tr>
            <td>Job Position: </td>           
            <td>
                <a href="/jobPost/{{application.job_id}}">{{application.jobPost.employer}} {{application.jobPost.jobTitle}} {{application.jobPost.city}}</a>
            </td>
        </tr>
        <tr>
            <td>Resume:</td>
            <td>
                <a href="/resume/{{application.resume_id}}">Click to the resume</a>
            </td>
        </tr>
        <tr>
            <td>Submission Date</td>
            <td></td>
        </tr>
        <tr>
            <td>Application Status</td>
            <td></td>
        </tr>
