<section class="MainPage">
    <h1>{{application.jobPost.employer}}, {{application.jobPost.jobTitle}}, {{application.jobPost.city}}</h1>
    <table id="appDetail" border="1">
        <tr>
            <td>Applicant: </td>
            <td>{{application.applicant.firstname}} {{application.applicant.lastname}}</td>
        </tr>
        <tr>
            <td>Company Name</td>
            <td>{{application.jobPost.employer}}</td>
        </tr>
        <tr>
            <td>Job Position: </td>           
            <td>
                <a href="/jobPost/{{application.job_id}}">{{application.jobPost.jobTitle}}, {{application.jobPost.city}}</a>
            </td>
        </tr>
        <tr>
            <td>Resume:</td>
            <td>
                <a href="/resume/{{application.resume_id}}">Click to the resume</a>
            </td>
        </tr>
        <tr>
            <td>Submission Date</td>
            <td>{{application.createTime}}</td>
        </tr>
        <tr>
            <td>Application Status</td>
            <td>
                {{!-- {{#if_eq applications.status 0}}
                    Status: pending
                {{else}} {{#if_eq application.status 1}}
                        Status: admitted
                {{else}}
                        Status: rejected
                    {{/if_eq}}
                {{/if_eq}}
                Notes: {{application.notes}} --}}
            </td>
        </tr>
        
    </table>
    <p style="color: red;">{{error}}</p>
    <a href="/applicant/applied" id="return"> ‚Üê Back to List</a>

</section>

