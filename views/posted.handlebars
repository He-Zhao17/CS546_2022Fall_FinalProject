<section class="MainPage">
    <h1>Posted Jobs</h1>
    <ul id="postedJobs">
        {{#each jobPosts}}
            <li>
                {{this.jobTitle}} 
                <br>
                {{this.employer}} {{this.city}} 
                <a href="/jobPost/{{this._id}}">View</a>
                <a href="/hr/post">Edit</a>
            </li>
        {{/each}}
    </ul>
    <p style="color: red;">{{error}}</p>

</section>