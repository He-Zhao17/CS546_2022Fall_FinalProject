<section class="MainPage">
  
  <h1>Job Market</h1>
<div id="jobPlatform">
<div id="jobSearch">
  <form id="sort-form" name="sort-form" action="" method="POST">
      <input type = "hidden" id="formid" name="formid" value="sort-form">
          <label for="sortby">
              Sort By
              <select onclick="submit_form()" id = "sortby" name="sortby">
                  <option  value="LowHigh">Low to High</option>
                  <option  value="HighLow">High to Low</option>
              </select>
          </label>
  </form>
      <script>
      function submit_form(){
          var form = document.getElementById("sort-form");
          form.submit();
      }
      </script>
    <p>{{error}}</p>
    <form id="jobmarket-form" name="jobmarket-form" action="" method="POST">
    <input type = "hidden" id="formid" name="formid" value="jobmarket-form">
      <input type="radio" id="type" name="type" value="employer">
      <label>employer</label><br>
      <input type="radio" id="type" name="type" value="country">
      <label>country</label><br>
      <input type="radio" id="type" name="type" value="state">
      <label>CSS</label><br>
      <input type="radio" id="type" name="type" value="city">
      <label>city</label><br>
      <input type="radio" id="type" name="type" value="salary">
      <label>salary</label><br>
      <input type="radio" id="type" name="type" value="jobTitle">
      <label>jobTitle</label><br>
      <input type="input" id = "input" name="input" placeholder="input">
      <label>input</label>
      <br>  
      <button class="submitButton" type="submit">search</button>
    </form>
  <br>
</div>
  <div id="jobResult">
  {{#each jobs}}
  
    <div class="jobList">
  <input type = "hidden" id="formid" name="formid" value="jobpost-form">
    <label><h3>{{jobTitle}}</h3></label>
    <label>Employer:{{employer}}</label>
    <br>
    <label>salary:{{salary}}</label>
    <br>
  
    <label>Location:{{country}}, {{state}}, {{city}}</label>
    <br>
    <label>Description:{{jobDescription}}</label>
    <br>
    <input type = "hidden" id="jobid" name="jobid" value={{_id}}>
    <input type = "hidden" id="posterid" name="posterid" value={{posterId}}>
        
    <button id="{{_id}}" class="submitButton" type="submit" onClick="show(this.id);">
      submit resume
      </button>

    
  </div>
  {{/each}}
   </div>

   <div id="hidebg"></div>
    
</div>


<div id="hidebox">
      <button onClick="hide();" id="closeButton">x</button>
      <form action="/applications/createApplication" method="POST" id="jobpost-form">
        <input type="text" id="jobInput" name="jobIdToBack" value="" style="display: none;">
        <label for="submitResume">
          Select one resume:
          <select name="submitResume" id="submitResume">
              {{#each resumes}}
                  <option value={{_id}}>{{resumeName}}</option>
              {{/each}}
          </select>
        </label>
        <br>
        <button class="submitButton" type="submit" onClick="submitHide();">SUBMIT</button>
      </form>
    </div>
</section>