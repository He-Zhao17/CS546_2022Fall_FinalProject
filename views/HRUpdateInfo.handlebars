<section class="MainPage">
    <p>{{error}}</p>
    <h1>This is Update page for HR</h1>
    <form action="/hr/updateInfo" method="POST" class="InfoForm">
        <label>
          Please enter change the info you want:
        </label>
        <br>
        <p style="color: red;">{{error}}</p>
        <label for="firstname">
            Firstname
            <input type="firstname" id = "firstnameInput" name="firstnameInput" value={{user.firstname}}>
        </label>
        <br>
        <label for="lastname">
            Lastname
            <input type="lastname" id = "lastnameInput" name="lastnameInput"  value={{user.lastname}}>
        </label>
        <br>
        <label for="genderInput">
            Type
            <select id = "genderInput" name="genderInput" value={{user.gender}}>
                <option value="0">Male</option>
                <option value="1">Female</option>
                <option value="2">Others</option>
            </select>
        </label>
        <br>
        <label for="city">
            City
            <input type="city" id = "cityInput" name="cityInput" value={{user.city}}>
        </label>
        <label for="state">
            State
            <input type="state" id = "stateInput" name="stateInput" value={{user.state}}>
        </label>
        <label for="country">
            Country
            <input type="country" id = "countryInput" name="countryInput"  value={{user.country}}>
        </label>
        <br>
        <label for="age">
            Age
            <input type="age" id = "ageInput" name="ageInput" placeholder="age">
        </label>
        <br>
        <label for="phone">
            Phone Number
            <input type="phone" id = "phoneInput" name="phoneInput" value={{user.phone}}>
        </label>
        <br>
        <button class="submitButton updateButton" type="submit">Update</button>
        <a href="/" id="cancelLink">
            Cancel
        </a>
    </form>
</section>