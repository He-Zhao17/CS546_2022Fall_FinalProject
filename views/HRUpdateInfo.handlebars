<section class="MainPage">
    <p>{{error}}</p>
    <h1>This is Update page for HR</h1>
    {{#each user}}
    <form action="/hr/updateInfo" method="POST" class="InfoForm">
        <label>
          Please enter change the info you want:
        </label>
        <br>
        <p style="color: red;">{{error}}</p>
        <label for="firstname">
            Firstname
            <input type="firstname" id = "firstnameInput" name="firstnameInput" value={{firstname}}>
        </label>
        <br>
        <label for="lastname">
            Lastname
            <input type="lastname" id = "lastnameInput" name="lastnameInput"  value={{lastname}}>
        </label>
        <br>
        <label for="genderInput">
            Type
            <select id = "genderInput" name="genderInput">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="others">Others</option>
            </select>
        </label>
        <br>
        <label for="city">
            City
            <input type="city" id = "cityInput" name="cityInput" value={{city}}>
        </label>
        <label for="state">
            State
            <input type="state" id = "stateInput" name="stateInput" value={{state}}>
        </label>
        <label for="country">
            Country
            <input type="country" id = "countryInput" name="countryInput"  value={{country}}>
        </label>
        <br>
        <label for="phone">
            Phone Number
            <input type="phone" id = "phoneInput" name="phoneInput" value={{phone}}>
        </label>
        <br>
        
        <button class="submitButton updateButton" type="submit">Update</button>
        <a href="/" id="cancelLink">
            Cancel
        </a>
    </form>
    {{/each}}
</section>