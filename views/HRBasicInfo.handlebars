
<section class="MainPage">
    <nav class="HomeNav">
        <img src="/public/img/Logo.png" alt="Resumia">
        <div>
            <a href="/aboutus">About Us</a>
            <a href="/logout"><button class="LoginButton" type="submit">Log out</button></a>
        </div>
            
    </nav>
    <hr>
    <h1>This is basic info page for HR</h1>
    <form action="/hr/addBasicInfo" method="POST" class="InfoForm">
        <label>
            Please enter more info so that we can help u receive applications easier:
        </label>
        <br>
        <p style="color: red;">{{error}}</p>
        <label for="firstname">
            Firstname
            <input type="firstname" id = "firstnameInput" name="firstnameInput" placeholder="firstname">
        </label>
        <label for="lastname">
            Lastname
            <input type="lastname" id = "lastnameInput" name="lastnameInput" placeholder="lastname">
        </label>
        <br>
        <label for="genderInput">
            Type
            <select id = "genderInput" name="genderInput" >
                <option value="0">Male</option>
                <option value="1">Female</option>
                <option value="2">Others</option>
            </select>
        </label>
        <br>
        <label for="city">
            City
            <input type="city" id = "cityInput" name="cityInput" placeholder="city">
        </label>
        <label for="state">
            State
            <input type="state" id = "stateInput" name="stateInput" placeholder="state">
        </label>
        <label for="country">
            Country
            <input type="country" id = "countryInput" name="countryInput" placeholder="country">
        </label>
        <br>
        <label for="age">
            Age
            <input type="age" id = "ageInput" name="ageInput" placeholder="age" min="1" max="100">
        </label>
        <br>
        <label for="phone">
            Phone (US only)
            <input type="phone" id = "phoneInput" name="phoneInput" placeholder="phone">
        </label>
        <br>
        <button class="submitButton" type="submit">Continue</button>
    </form>
</section>
