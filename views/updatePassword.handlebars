<section class="MainPage">
  
  <h1>Update Password</h1>
<p>{{error}}</p>

    {{#if isApplicant}}
    <form class="InfoForm" name="password-form" action="/applicant/updatePassword" method="POST">
        <label for="passwordInputFirst">
            Old Password
            <input type="text" id = "passwordInputFirst" name="passwordInputFirst" placeholder="password">
        </label>
        <br>
        <label for="passwordInputSecond">
            Retype Old Password
            <input type="text" id = "passwordInputSecond" name="passwordInputSecond" placeholder="repeat your password">
        </label>
        <br>
        <label for="NewpasswordInput">
            New Password
            <input type="text" id = "NewpasswordInput" name="NewpasswordInput" placeholder="password">
        </label>
        <br>
        <button class="submitButton updateButton" type="submit">Update</button>
        <a href="/" id="cancelLink">
            Cancel
        </a>
    </form>

    {{else}}
    <form class="InfoForm" name="password-form" action="/hr/updatePassword" method="POST">
        <label for="passwordInputFirst">
            Old Password
            <input type="password" id = "passwordInputFirst" name="passwordInputFirst" placeholder="password">
        </label>
        <br>
        <label for="passwordInputSecond">
            Retype Old Password
            <input type="password" id = "passwordInputSecond" name="passwordInputSecond" placeholder="repeat your password">
        </label>
        <br>
        <label for="NewpasswordInput">
            New Password
            <input type="password" id = "NewpasswordInput" name="NewpasswordInput" placeholder="password">
        </label>
        <br>
        <button class="submitButton updateButton" type="submit">Update</button>
        <a href="/" id="cancelLink">
            Cancel
        </a>
    </form>

    {{/if}}

</section>